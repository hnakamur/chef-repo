{
  "afw": {
    "rules": {
      "Accept icmp": {
        "table": "filter",
        "rule": "-A INPUT -p icmp -j ACCEPT"
      },
      "Accept ssh": {
        "table": "filter",
        "rule": "-A INPUT -m state --state NEW -m tcp -p tcp --dport 22 -j ACCEPT"
      },
      "Accept http": {
        "table": "filter",
        "rule": "-A INPUT -m state --state NEW -m tcp -p tcp --dport 80 -j ACCEPT"
      },
      "Accept https": {
        "table": "filter",
        "rule": "-A INPUT -m state --state NEW -m tcp -p tcp --dport 443 -j ACCEPT"
      },
      "Reject icmp inputs from prohibited hosts": {
        "table": "filter",
        "rule": "-A INPUT -j REJECT --reject-with icmp-host-prohibited"
      },
      "Reject icmp forwards from prohibited hosts": {
        "table": "filter",
        "rule": "-A FORWARD -j REJECT --reject-with icmp-host-prohibited"
      }
    }
  },
  "ntp": {
    "servers": [
      "ntp3.jst.mfeed.ad.jp",
      "ntp2.jst.mfeed.ad.jp",
      "ntp1.jst.mfeed.ad.jp"
    ]
  },
  "nginx": {
    "install_method": "source",
    "version": "1.3.15",
    "source": {
      "checksum": "3267574f007cba5d947ad04d2aebd45ffec06565d019791bc536229bbc6d3b84"
    }
  },
  "php": {
    "install_method": "package",
    "packages": [
      "php",
      "php-devel",
      "php-intl",
      "php-mbstring",
      "php-pear",
      "php-pecl-apc",
      "php-pdo",
      "php-mysql",
      "php-process",
      "php-soap",
      "php-xml"
    ],
    "directives": {
      "date.timezone": "Asia/Tokyo"
    }
  },
  "mysql": {
    "server_debian_password": "",
    "server_root_password": "",
    "server_repl_password": ""
  },
  "run_list":[
    "selinux::disabled",
    "afw",
    "ntp",
    "custom-sysstat",
    "yum::remi",
    "mysql::server",
    "nginx",
    "php"
  ]
}
